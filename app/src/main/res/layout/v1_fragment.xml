<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                android:background="@mipmap/me_power_attorney_bg">

                <ImageView
                    android:id="@+id/logo_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="75dp"
                    android:src="@mipmap/mepwor_iv1" />

                <ImageView
                    android:id="@+id/tv_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/logo_iv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:src="@mipmap/me_power_attorney_tv" />

                <TextView
                    android:id="@+id/me_power_attorney_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_iv"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="26dp"
                    android:layout_marginRight="48dp"
                    android:lineSpacingExtra="8dp"
                    android:lineSpacingMultiplier="1"
                    android:textColor="#585858"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/me_power_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/me_power_attorney_name_tv"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginRight="48dp"
                    android:lineSpacingExtra="8dp"
                    android:lineSpacingMultiplier="1"
                    android:text="本授权书有效期同被授权人的众鑫助手APP账户使用期限，特此授权!"
                    android:textColor="#585858"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/me_power_attorney_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/me_power_tv1"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="20dp"
                    android:text="授权邀请码: "
                    android:textColor="#585858"
                    android:textSize="12sp" />


                <ImageView
                    android:src="@mipmap/me_power_01"
                    android:id="@+id/seal_iv"
                    android:layout_width="87dp"
                    android:layout_height="87dp"
                    android:layout_below="@+id/me_power_attorney_number_tv"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="54dp"
                    android:layout_marginBottom="70dp" />

                <TextView
                    android:id="@+id/me_power_attorney_company_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/me_power_attorney_year_tv"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="51dp"
                    android:layout_marginBottom="5dp"
                    android:text="长春众鑫助手科技有限公司"
                    android:textColor="#5F5F5F"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/me_power_attorney_year_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/seal_iv"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="51dp"
                    android:layout_marginBottom="5dp"
                    android:text="2020年11月30日"
                    android:textColor="#5F5F5F"
                    android:textSize="12sp" />


            </RelativeLayout>
        </LinearLayout>


    </ScrollView>
</LinearLayout>