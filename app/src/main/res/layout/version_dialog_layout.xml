<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@mipmap/version_dialog_bg_iv"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="17dp"
            android:text="发现新版本"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:text="V2.0"
            android:textColor="#ffffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="15dp"
            android:textSize="14sp" />


        <Button
            android:id="@+id/versionchecklib_version_dialog_commit"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="68dp"
            android:layout_marginBottom="19dp"
            android:background="@drawable/login_btn_on_bg"
            android:text="一键升级"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />


    </LinearLayout>

    <ImageView
        android:id="@+id/versionchecklib_version_dialog_cancel"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_marginTop="13dp"
        android:src="@mipmap/version_dialog_out_iv" />


</LinearLayout>