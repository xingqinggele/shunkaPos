<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:background="@drawable/main_me_line_bg"
    android:layout_marginTop="13dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <TextView
        android:id="@+id/query_tv1"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:background="@color/new_theme_color"
        android:layout_width="4dp"
        android:layout_height="16dp"/>
    <TextView
        android:drawablePadding="10dp"
        android:gravity="center"
        android:drawableRight="@mipmap/item_quray_rhgit_tv"
        app:layout_constraintBottom_toBottomOf="@+id/query_tv1"
        app:layout_constraintTop_toTopOf="@+id/query_tv1"
        android:textColor="#333333"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginLeft="12dp"
        android:id="@+id/query_state"
        app:layout_constraintLeft_toRightOf="@+id/query_tv1"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/query_img"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/query_state"
        app:layout_constraintTop_toBottomOf="@+id/query_state"
        android:layout_width="40dp"
        android:layout_height="80dp"/>

    <TextView
        android:textSize="15sp"
        android:textColor="#9F9F9F"
        android:drawablePadding="7dp"
        android:drawableLeft="@mipmap/item_query_im1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:id="@+id/query_tv_name"
        android:text=""
        app:layout_constraintLeft_toRightOf="@+id/query_img"
        app:layout_constraintTop_toTopOf="@+id/query_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




    <TextView
        android:textColor="#9F9F9F"
        android:textSize="15sp"
        android:drawablePadding="7dp"
        android:drawableLeft="@mipmap/item_terminal_iv1"
        android:layout_marginTop="20dp"
        android:id="@+id/query_tv_type"
        android:text=""
        app:layout_constraintLeft_toLeftOf="@+id/query_tv_name"
        app:layout_constraintTop_toBottomOf="@+id/query_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <View
        android:background="#E5E5E5"
        android:id="@+id/query_view"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/query_img"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:textColor="#999999"
        android:textSize="13sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/query_tv_detail"
        app:layout_constraintTop_toTopOf="@+id/query_tv_detail"
        android:id="@+id/query_tv_number"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="12sp"
        android:id="@+id/query_tv_detail"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/item_terminal_text_bg"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/query_view"
        android:text="详情查询"
        android:textColor="#3CA0FF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</android.support.constraint.ConstraintLayout>