<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/me_merchants_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/main_me_line_bg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="205dp"
                    android:background="@mipmap/home_list_bg">

                    <LinearLayout
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:id="@+id/liner1"
                        android:layout_width="60dp"
                        android:layout_height="86dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="13dp"
                        android:background="@mipmap/home_list_head_bg1">


                        <com.facebook.drawee.view.SimpleDraweeView
                            android:layout_marginLeft="1.8dp"
                            android:layout_marginTop="28dp"
                            fresco:roundAsCircle="true"
                            android:id="@+id/one_head_iv"
                            android:layout_width="56dp"
                            android:layout_height="56dp"/>

                    </LinearLayout>

                    <TextView
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/liner1"
                        android:id="@+id/one_name"
                        android:background="@drawable/this_month_test_bg"
                        android:layout_marginTop="35dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="李**"
                        android:textColor="#ffffffff"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:id="@+id/one_number"
                        app:layout_constraintTop_toBottomOf="@+id/one_name"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="27"
                        android:textColor="#ffffdf49"
                        android:textSize="21sp"
                        />

                    <LinearLayout
                        android:layout_marginLeft="40dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:id="@+id/liner2"
                        android:layout_width="60dp"
                        android:layout_height="84dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="42dp"
                        android:background="@mipmap/home_list_head_bg2">


                        <com.facebook.drawee.view.SimpleDraweeView
                            android:layout_marginLeft="1.8dp"
                            android:id="@+id/two_head_iv"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_marginTop="26dp"
                            fresco:roundAsCircle="true" />

                    </LinearLayout>

                    <TextView
                        app:layout_constraintRight_toRightOf="@+id/liner2"
                        app:layout_constraintLeft_toLeftOf="@+id/liner2"
                        app:layout_constraintTop_toBottomOf="@+id/liner2"
                        android:id="@+id/two_name"
                        android:background="@drawable/this_month_test_bg"
                        android:layout_marginTop="22dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="李**"
                        android:textColor="#ffffffff"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:id="@+id/two_number"
                        app:layout_constraintTop_toBottomOf="@+id/two_name"
                        app:layout_constraintRight_toRightOf="@+id/two_name"
                        app:layout_constraintLeft_toLeftOf="@+id/two_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="27"
                        android:textColor="#ffffdf49"
                        android:textSize="21sp"
                        />
                    <LinearLayout
                        android:layout_marginRight="45dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:id="@+id/liner3"
                        android:layout_width="60dp"
                        android:layout_height="83dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="53dp"
                        android:background="@mipmap/home_list_head_bg3">


                        <com.facebook.drawee.view.SimpleDraweeView
                            android:layout_marginLeft="1.8dp"
                            android:layout_marginTop="25dp"
                            fresco:roundAsCircle="true"
                            android:id="@+id/three_head_iv"
                            android:layout_width="56dp"
                            android:layout_height="56dp"/>

                    </LinearLayout>

                    <TextView
                        app:layout_constraintRight_toRightOf="@+id/liner3"
                        app:layout_constraintLeft_toLeftOf="@+id/liner3"
                        app:layout_constraintTop_toBottomOf="@+id/liner3"
                        android:id="@+id/three_name"
                        android:background="@drawable/this_month_test_bg"
                        android:layout_marginTop="17dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="李**"
                        android:textColor="#ffffffff"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:id="@+id/three_number"
                        app:layout_constraintTop_toBottomOf="@+id/three_name"
                        app:layout_constraintRight_toRightOf="@+id/three_name"
                        app:layout_constraintLeft_toLeftOf="@+id/three_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="27"
                        android:textColor="#ffffdf49"
                        android:textSize="21sp"
                        />


                </android.support.constraint.ConstraintLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/me_merchants_list_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="@drawable/main_me_line_bg" />

            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>


</LinearLayout>