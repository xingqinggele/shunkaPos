<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/new_theme_color">

        <RelativeLayout
            android:id="@+id/merchant_squery_relative"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <LinearLayout
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="25dp"
                    android:padding="5dp"
                    android:src="@mipmap/back_whilte_left" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="我的商户"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </RelativeLayout>

        <EditText
            android:id="@+id/me_merchants_person_ed_search"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_below="@+id/merchant_squery_relative"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="22dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/home_team_search_ed_bg"
            android:drawableLeft="@mipmap/while_query"
            android:drawablePadding="6dp"
            android:hint="请输入商户姓名"
            android:imeOptions="actionSearch"
            android:maxLines="1"
            android:paddingLeft="16dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="@color/new_theme_color"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:id="@+id/me_merchants_list_size"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="共0户"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp" />

            <TextView
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/me_merchants_turnover"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:drawablePadding="14dp"
                android:text="本月交易额"
                android:textColor="@color/white"
                android:textSize="14sp" />

    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/me_merchants_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="13dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/me_merchants_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>