<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main_me_line_bg">


    <TextView
        android:id="@+id/dialog_title"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="提示"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/dialog_tv1"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/dialog_title"
        android:text="啊实打实大苏打实打实打算的啊实打实大大苏打实打实v阿三大苏打苏打实打实"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>




    <TextView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_goneMarginBottom="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toBottomOf="@+id/dialog_tv1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="30dp"
        android:textColor="#0053CB"
        android:id="@+id/dialog_determine"
        android:layout_marginTop="50dp"
        android:text="确定"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#0053CB"
        android:layout_marginRight="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_determine"
        app:layout_constraintTop_toTopOf="@+id/dialog_determine"
        app:layout_constraintRight_toLeftOf="@+id/dialog_determine"
        android:id="@+id/dialog_cancel"
        android:text="取消"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




</android.support.constraint.ConstraintLayout>