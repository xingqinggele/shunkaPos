<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    android:orientation="vertical">

    <com.example.shunkapos.views.VpSwipeRefreshLayout
        android:id="@+id/ri_home_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/sc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="285dp"
                    android:background="@mipmap/ri_home_bg">


                    <TextView
                        android:id="@+id/ri_home_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="30dp"
                        android:text="Hi，"
                        android:textColor="#ffffffff"
                        android:textSize="18sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/ri_home_message_iv"
                        android:layout_width="22dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/main_home_messge"
                        app:layout_constraintBottom_toBottomOf="@+id/ri_home_name_tv"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/ri_home_name_tv" />

                    <TextView
                        android:text="0"
                        android:id="@+id/ri_home_turnover_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60dp"
                        android:textColor="#ffffffff"
                        android:textSize="31sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ri_home_name_tv" />

                    <TextView
                        android:id="@+id/ri_home_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="商户交易额(元）"
                        android:textColor="#ffebf3ff"
                        android:textSize="15sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ri_home_turnover_tv" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:text="0"
                                android:id="@+id/ri_home_new_partner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#ffffffff"
                                android:textSize="21sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="本月新增伙伴(人）"
                                android:textColor="#ffebf3ff"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:background="@color/white" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:text="0"
                                android:id="@+id/ri_home_new_merchants"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#ffffffff"
                                android:textSize="21sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="本月新增商户(户）"
                                android:textColor="#ffebf3ff"
                                android:textSize="12sp" />

                        </LinearLayout>


                    </LinearLayout>


                </android.support.constraint.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginRight="4dp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:id="@+id/main_home_me_merchants"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:src="@mipmap/main_home_11" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="我的商户"
                                android:textColor="#616161"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/main_home_invite_partners"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:src="@mipmap/main_home_22" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="商户报件"
                                android:textColor="#616161"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/main_home_my_partner"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:src="@mipmap/main_home_33" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="我的伙伴"
                                android:textColor="#616161"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/main_home_terminal_management"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:src="@mipmap/main_home_44" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="终端管理"
                                android:textColor="#616161"
                                android:textSize="11sp" />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="12dp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:id="@+id/main_home_list"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:src="@mipmap/main_home_55" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="商学院"
                                android:textColor="#616161"
                                android:textSize="11sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/main_home_real_name"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:src="@mipmap/main_home_66" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="实名认证"
                                android:textColor="#616161"
                                android:textSize="11sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/main_home_gift_bag"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:src="@mipmap/main_home_88" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="邀请伙伴"
                                android:textColor="#616161"
                                android:textSize="11sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/main_home_integral"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:src="@mipmap/main_home_77" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="交易记录"
                                android:textColor="#616161"
                                android:textSize="11sp" />
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="12dp">

                    <View
                        android:id="@+id/ve1"
                        android:layout_width="5dp"
                        android:layout_height="16dp"
                        android:layout_centerVertical="true"
                        android:background="@color/main_home_view_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/ve1"
                        android:text="最新活动"
                        android:textColor="#ff444444"
                        android:textSize="17sp" />

                </RelativeLayout>
                <com.youth.banner.Banner
                    android:id="@+id/ri_banner"
                    android:layout_width="match_parent"
                    android:layout_height="145dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginBottom="12dp"
                    app:image_scale_type="fit_xy" />


            </LinearLayout>

        </ScrollView>

    </com.example.shunkapos.views.VpSwipeRefreshLayout>
</RelativeLayout>