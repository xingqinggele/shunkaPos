<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/theme_color">

        <LinearLayout
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="25dp"
                android:padding="5dp"
                android:src="@mipmap/main_left_return" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="意见反馈"
            android:textColor="#ff333333"
            android:textSize="18sp" />

    </RelativeLayout>
    <ScrollView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="14dp"
                android:text="请选择您要反馈的问题类型（必填）"
                android:textColor="#ffb8b8b8"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/main_me_line_bg"
                android:orientation="vertical">

                <com.example.pos1.views.MyListView
                    android:divider="@null"
                    android:id="@+id/checkbox_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="补充详细问题或意见（必填）"
                android:textColor="#ffb8b8b8"
                android:textSize="12sp"
                />

            <EditText
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:gravity="top"
                android:hint="请输入您的反馈内容"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/main_me_line_bg"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>

            <Button
                android:background="@drawable/merchants_detail_failure_btn_bg"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="26dp"
                android:textColor="@color/white"
                android:text="提交"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>
        </LinearLayout>



    </ScrollView>

    <TextView
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:text="暂无数据"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>