<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5">

    <RelativeLayout
        android:id="@+id/merchant_squery_relative"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/new_theme_color">

        <LinearLayout
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="25dp"
                android:padding="5dp"
                android:src="@mipmap/back_whilte_left" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="支付详情"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:background="@drawable/main_me_line_bg"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <View
                        android:background="@color/new_theme_color"
                        android:layout_width="4dp"
                        android:layout_height="15dp"/>
                    <TextView
                        android:textSize="16sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        android:text="账单明细"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <RelativeLayout
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="11dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/title_tv1"
                        android:textSize="15sp"
                        android:text="订单号"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/order_num_tv"
                        android:layout_marginRight="10dp"
                        android:gravity="right"
                        android:layout_toRightOf="@+id/title_tv1"
                        android:layout_toLeftOf="@+id/copy_tv"
                        android:text="2020222222"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/copy_tv"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/new_theme_color"
                        android:text="复制"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="11dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/title_tv2"
                        android:textSize="15sp"
                        android:text="支付宝订单号"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/zfb_order_num_tv"
                        android:layout_toRightOf="@+id/title_tv2"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:gravity="right"
                        android:text="2020222222"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </RelativeLayout>

                <RelativeLayout
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="11dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/title_tv3"
                        android:textSize="15sp"
                        android:text="商品金额"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/order_price_tv"
                        android:layout_toRightOf="@+id/title_tv3"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:gravity="right"
                        android:text="2020222222"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </RelativeLayout>

                <RelativeLayout
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="11dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/title_tv4"
                        android:textSize="15sp"
                        android:text="交易时间"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/order_time_tv"
                        android:layout_toRightOf="@+id/title_tv4"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:gravity="right"
                        android:text="2020222222"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginBottom="20dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="11dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/title_tv5"
                        android:textSize="15sp"
                        android:text="订单状态"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/order_static_tv"
                        android:layout_toRightOf="@+id/title_tv5"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:gravity="right"
                        android:text="2020222222"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </RelativeLayout>

            </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:background="@drawable/main_me_line_bg"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:background="@color/new_theme_color"
                    android:layout_width="4dp"
                    android:layout_height="15dp"/>
                <TextView
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:text="顾客信息"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_marginBottom="20dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="11dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title_tv6"
                    android:textSize="15sp"
                    android:text="顾客支付宝账号"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/order_zfb_num_tv"
                    android:layout_toRightOf="@+id/title_tv6"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:gravity="right"
                    android:text="2020222222"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>
        </LinearLayout>


        </LinearLayout>




    </ScrollView>


</LinearLayout>