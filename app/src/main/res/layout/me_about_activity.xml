<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#f5f5f5"
>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/new_theme_color">

        <LinearLayout
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="25dp"
                android:padding="5dp"
                android:src="@mipmap/back_whilte_left" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="关于我们"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>

    <LinearLayout
        android:background="@drawable/main_me_line_bg"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="18dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">


            <TextView
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:background="@color/new_theme_color"
                android:layout_width="5dp"
                android:layout_height="16dp"/>

            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="17dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="软件信息"
                android:textColor="#ff333333"
                android:textSize="17sp"
                />
        </LinearLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="顺卡助手（Android）"
            android:textColor="#ff272727"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/about_version"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本："
            android:textColor="#ff272727"
            android:textSize="15sp"
            />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="13dp"
        android:background="@drawable/main_me_line_bg"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">


            <TextView
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:background="@color/new_theme_color"
                android:layout_width="5dp"
                android:layout_height="16dp"/>

            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="17dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务信息"
                android:textColor="#ff333333"
                android:textSize="17sp"
                />
        </LinearLayout>

        <TextView
            android:visibility="invisible"
            android:id="@+id/privacy_btn_tv"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/policy_tv"
            android:textColor="#ffff5c95"
            android:textSize="15sp"
            />

        <TextView
            android:visibility="invisible"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/agreement_tv"
            android:textColor="#ffff5c95"
            android:textSize="15sp"
            />
    </LinearLayout>


</LinearLayout>