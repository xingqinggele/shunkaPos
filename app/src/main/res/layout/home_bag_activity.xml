<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:orientation="vertical">
    <RelativeLayout
        android:background="@color/new_theme_color"
        android:id="@+id/merchant_squery_relative"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <LinearLayout
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="25dp"
                android:padding="5dp"
                android:src="@mipmap/back_whilte_left" />

        </LinearLayout>


        <TextView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="信用卡申请"
            android:textColor="@color/white"
            android:textSize="18sp"
          />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="match_parent"
                android:layout_height="245dp"
                android:id="@+id/simple"
                fresco:roundAsCircle="true"
                />
            <TextView
                android:layout_marginTop="19dp"
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="【用户需知】"
                android:textColor="#ff9f9f9f"
                android:textSize="13sp"
                />
            <TextView
                android:letterSpacing="0.05"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. 结算周期：次月25日，任意订单达到可结算标准后次 月可结算，可在众鑫APP平台收益明细内查看。\n2. 结算方式：可在平台内直接提现，收取手续费9%税。"
                android:textColor="#ff9f9f9f"
                android:textSize="12sp"
                />
            <Button
                android:id="@+id/btn"
                android:layout_marginRight="43dp"
                android:layout_marginLeft="43dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/login_btn_on_bg"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="我要办卡"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>