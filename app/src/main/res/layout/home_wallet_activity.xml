<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/new_theme_color">

        <LinearLayout
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="25dp"
                android:padding="5dp"
                android:src="@mipmap/back_whilte_left" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="我的钱包"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="198dp"
                android:layout_marginTop="21dp"
                android:background="@mipmap/data_personal_results">

                <TextView
                    android:id="@+id/home_wallet_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="19dp"
                    android:background="@drawable/home_wallet_tv_bg"
                    android:drawableRight="@mipmap/equipment_iv_rghit1"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="账单明细"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:text="0.00"
                    android:id="@+id/data_price_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:textSize="36sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/home_wallet_detail" />


                <TextView
                    android:id="@+id/home_wallet_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@mipmap/equipment_iv4"
                    android:drawablePadding="7dp"
                    android:text="总可用余额 (元)"
                    android:textColor="#CFE7FF"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toLeftOf="@+id/data_price_tv1"
                    app:layout_constraintTop_toBottomOf="@+id/data_price_tv1" />

            </android.support.constraint.ConstraintLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/main_me_line_bg">


                <TextView
                    android:id="@+id/home_wallet_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="17dp"
                    android:drawableLeft="@mipmap/equipment_iv6"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:text="结算款账户（元）"
                    android:textColor="#8A8A8A"
                    android:textSize="14sp" />

                <TextView
                    android:text="0.00"
                    android:id="@+id/data_price_tv_rewardAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_wallet_tv2"
                    android:layout_alignLeft="@+id/home_wallet_tv2"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="25dp"
                    android:textColor="#3CA0FF"
                    android:textSize="26sp" />

                <TextView
                    android:id="@+id/wallet_settlement_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="17dp"
                    android:background="@drawable/merchants_detail_failure_btn_bg1"
                    android:gravity="center"
                    android:text="去提现"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="80dp"
                android:background="@drawable/main_me_line_bg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_wallet_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="17dp"
                    android:drawableLeft="@mipmap/equipment_iv6"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:text="激活奖励（元）"
                    android:textColor="#8A8A8A"
                    android:textSize="14sp" />

                <TextView
                    android:text="0.00"
                    android:id="@+id/data_price_tv_walletAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_wallet_tv3"
                    android:layout_alignLeft="@+id/home_wallet_tv3"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="25dp"
                    android:textColor="#3CA0FF"
                    android:textSize="26sp" />


                <TextView
                    android:id="@+id/wallet_reward_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="17dp"
                    android:background="@drawable/merchants_detail_failure_btn_bg1"
                    android:gravity="center"
                    android:text="去提现"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </RelativeLayout>


        </LinearLayout>


    </ScrollView>

</LinearLayout>