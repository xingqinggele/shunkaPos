<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp">

    <TextView
        android:id="@+id/item_integarall_type"
        android:layout_marginLeft="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="激活机具"
        android:textColor="#ff585858"
        android:textSize="14sp"
        />
    <TextView
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/item_integarall_time"
        app:layout_constraintLeft_toLeftOf="@+id/item_integarall_type"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/item_integarall_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffbcbcbc"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/item_integarall_price"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_integarall_time"
        app:layout_constraintTop_toTopOf="@+id/item_integarall_type"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/new_theme_color"
        android:textSize="24sp"
        />

    <View
        android:background="#E5E5E5"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

</android.support.constraint.ConstraintLayout>