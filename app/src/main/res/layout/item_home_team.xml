<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_team_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="13dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/main_me_line_bg">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/home_team_logo"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        fresco:roundAsCircle="true" />


    <ImageView
        android:id="@+id/real_name_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:src="@mipmap/no_real_name"
        app:layout_constraintLeft_toLeftOf="@+id/home_team_logo"
        app:layout_constraintRight_toRightOf="@+id/home_team_logo"
        app:layout_constraintTop_toBottomOf="@+id/home_team_logo" />

    <TextView
        android:id="@+id/home_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:textColor="#ff333333"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/home_team_logo"
        app:layout_constraintLeft_toRightOf="@+id/home_team_logo"
        app:layout_constraintTop_toTopOf="@+id/home_team_logo" />

    <View
        android:id="@+id/home_team_view"
        android:layout_width="1dp"
        android:layout_height="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:background="#DCDCDC"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/home_team_logo"
        app:layout_constraintLeft_toRightOf="@+id/home_team_name"
        app:layout_constraintTop_toTopOf="@+id/home_team_logo" />

    <TextView
        android:id="@+id/home_team_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:drawablePadding="5dp"
        android:textColor="#ff333333"
        android:textSize="13sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/home_team_logo"
        app:layout_constraintLeft_toRightOf="@+id/home_team_view"
        app:layout_constraintTop_toTopOf="@+id/home_team_logo" />

    <ImageView
        android:id="@+id/home_team_phone_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:src="@mipmap/edit_fl_iv"
        app:layout_constraintBottom_toBottomOf="@+id/home_team_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/home_team_name" />


    <View
        android:id="@+id/home_team_view1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginRight="12dp"
        android:background="#DCDCDC"
        app:layout_constraintLeft_toLeftOf="@+id/home_team_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/real_name_type" />

    <TextView
        android:id="@+id/home_team_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:drawableLeft="@mipmap/hoem_team_turnover"
        android:drawablePadding="12dp"
        android:gravity="center"
        android:text="团队交易额"
        android:textColor="#ff7e7e7e"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@+id/home_team_view1"
        app:layout_constraintTop_toBottomOf="@+id/home_team_view1" />

    <TextView
        android:id="@+id/home_team_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textColor="#389DFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/home_team_tv1"
        app:layout_constraintLeft_toRightOf="@+id/home_team_tv1"
        app:layout_constraintTop_toTopOf="@+id/home_team_tv1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="元"
        android:textColor="#ff7e7e7e"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/home_team_tv_price"
        app:layout_constraintLeft_toRightOf="@+id/home_team_tv_price"
        app:layout_constraintTop_toTopOf="@+id/home_team_tv_price" />

    <TextView
        android:id="@+id/home_team_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:drawableLeft="@mipmap/home_team_activation"
        android:drawablePadding="12dp"
        android:gravity="center"
        android:text="本月新增商户"
        android:textColor="#ff7e7e7e"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@+id/home_team_tv1"
        app:layout_constraintTop_toBottomOf="@+id/home_team_tv1" />

    <TextView
        android:id="@+id/home_team_tv_teamTransAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textColor="#389DFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/home_team_tv2"
        app:layout_constraintLeft_toRightOf="@+id/home_team_tv2"
        app:layout_constraintTop_toTopOf="@+id/home_team_tv2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="户"
        android:textColor="#ff7e7e7e"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/home_team_tv_teamTransAmount"
        app:layout_constraintLeft_toRightOf="@+id/home_team_tv_teamTransAmount"
        app:layout_constraintTop_toTopOf="@+id/home_team_tv_teamTransAmount" />


    <ImageView
        android:id="@+id/home_team_tv_details"
        android:layout_width="7dp"
        android:layout_height="11dp"
        android:layout_marginRight="13dp"
        android:src="@mipmap/blue_rhit"
        app:layout_constraintBottom_toBottomOf="@+id/home_team_tv4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/home_team_tv1" />


    <TextView
        android:id="@+id/home_team_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:drawableLeft="@mipmap/xyk_smail_iv"
        android:drawablePadding="12dp"
        android:gravity="center"
        android:text="信用卡结算"
        android:textColor="#ff7e7e7e"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@+id/home_team_view1"
        app:layout_constraintTop_toBottomOf="@+id/home_team_tv2" />

    <TextView
        android:id="@+id/home_team_xyk_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textColor="#389DFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/home_team_tv3"
        app:layout_constraintLeft_toRightOf="@+id/home_team_tv3"
        app:layout_constraintTop_toTopOf="@+id/home_team_tv3" />

    <TextView
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:id="@+id/home_team_tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:drawableLeft="@mipmap/js_smail_iv"
        android:drawablePadding="12dp"
        android:gravity="center"
        android:text="扫码结算"
        android:textColor="#ff7e7e7e"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@+id/home_team_view1"
        app:layout_constraintTop_toBottomOf="@+id/home_team_tv3" />

    <TextView
        android:id="@+id/home_team_sm_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textColor="#389DFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/home_team_tv4"
        app:layout_constraintLeft_toRightOf="@+id/home_team_tv3"
        app:layout_constraintTop_toTopOf="@+id/home_team_tv4" />


</android.support.constraint.ConstraintLayout>