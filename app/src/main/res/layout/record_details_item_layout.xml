<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/item_record_details_code"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00003102962002212345"
        android:textColor="#ff787878"
        android:textSize="14sp"
        />

    <ImageView
        android:layout_marginLeft="9dp"
        app:layout_constraintLeft_toRightOf="@+id/item_record_details_code"
        app:layout_constraintBottom_toBottomOf="@+id/item_record_details_code"
        app:layout_constraintTop_toTopOf="@+id/item_record_details_code"
        android:src="@mipmap/record_details_copy"
        android:layout_width="17dp"
        android:layout_height="17dp"/>

    <View
        android:background="#E5E5E5"
        app:layout_constraintTop_toBottomOf="@+id/item_record_details_code"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    
</android.support.constraint.ConstraintLayout>