<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F3F3F3"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_data_day_results_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="20dp"
        android:text="2020-12"
        android:textColor="#ff969696"
        android:textSize="13sp" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/main_me_line_bg">

        <TextView
            android:id="@+id/item_data_day_results_item_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="19dp"
            android:text="新增伙伴"
            android:textColor="#ff969696"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_data_day_results_item_partner_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="0人"
            android:textColor="#ff969696"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/item_data_day_results_item_tv1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_data_day_results_item_tv1" />

        <TextView
            android:id="@+id/item_data_day_results_item_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="新增商户"
            android:textColor="#ff969696"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@+id/item_data_day_results_item_tv1"
            app:layout_constraintTop_toBottomOf="@+id/item_data_day_results_item_tv1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0户"
            android:textColor="#ff969696"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/item_data_day_results_item_tv2"
            app:layout_constraintRight_toRightOf="@+id/item_data_day_results_item_partner_num"
            app:layout_constraintTop_toTopOf="@+id/item_data_day_results_item_tv2" />

        <TextView
            android:id="@+id/item_data_day_results_item_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="总交易额"
            android:textColor="#ff969696"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@+id/item_data_day_results_item_tv2"
            app:layout_constraintTop_toBottomOf="@+id/item_data_day_results_item_tv2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="88888.00元"
            android:textColor="#ff969696"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/item_data_day_results_item_tv3"
            app:layout_constraintRight_toRightOf="@+id/item_data_day_results_item_partner_num"
            app:layout_constraintTop_toTopOf="@+id/item_data_day_results_item_tv3" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/item_data_day_results_item_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/item_data_day_results_item_tv3"
            tools:listitem="@layout/item_data_day_results_item" />


    </android.support.constraint.ConstraintLayout>

</LinearLayout>