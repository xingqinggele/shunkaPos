<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


<!--    <android.support.v4.widget.SwipeRefreshLayout-->
<!--        android:id="@+id/main_me_refresh"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent">-->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/main_me_title"
                    android:layout_width="match_parent"
                    android:layout_height="219dp"
                    android:background="@mipmap/me_title_bg"
                    android:orientation="vertical">

                    <android.support.constraint.ConstraintLayout
                        android:layout_centerVertical="true"
                        android:id="@+id/main_me_or_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                    >

                        <TextView
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:id="@+id/main_me_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="5dp"
                            android:text="张三"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                             />

                        <TextView
                            android:layout_marginTop="30dp"
                            app:layout_constraintTop_toBottomOf="@+id/main_me_name"
                            android:id="@+id/main_me_cooperation_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:background="@drawable/mefragment_tv_bg"
                            android:text="CY00000001"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            app:layout_constraintRight_toRightOf="@+id/main_me_name"
                            app:layout_constraintLeft_toLeftOf="@+id/main_me_name" />

                    </android.support.constraint.ConstraintLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="53dp">

                    <ImageView
                        android:id="@+id/me_iv2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="24dp"
                        android:src="@mipmap/main_me_referees" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:layout_toRightOf="@+id/me_iv2"
                        android:text="我的推荐人"
                        android:textColor="#ff333333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/recommended_person_tv"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="24dp"
                      />

                </RelativeLayout>

                <View
                    android:id="@+id/view_line1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#EDEDED" />

                <RelativeLayout
                    android:id="@+id/Binding_merchants_rela"
                    android:layout_width="match_parent"
                    android:layout_height="53dp">

                    <ImageView
                        android:id="@+id/me_iv3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="24dp"
                        android:src="@mipmap/main_me_referees" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:layout_toRightOf="@+id/me_iv3"
                        android:text="商户绑定"
                        android:textColor="#ff333333"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="7dp"
                        android:layout_height="11dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="24dp"
                        android:src="@mipmap/grey_rhit" />

                </RelativeLayout>

                <View
                    android:id="@+id/view_line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#EDEDED" />

                <RelativeLayout
                    android:id="@+id/Binding_code_rela"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:id="@+id/me_iv1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="24dp"
                        android:src="@mipmap/feilv_ivv" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:layout_toRightOf="@+id/me_iv1"
                        android:text="收款二维码"
                        android:textColor="#ff333333"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="7dp"
                        android:layout_height="11dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="24dp"
                        android:src="@mipmap/grey_rhit" />

                </RelativeLayout>


                <View

                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/main_home_line_color" />

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/me_merchants_setup"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:id="@+id/me_iv4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="24dp"
                        android:src="@mipmap/main_me_set_up" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:layout_toRightOf="@+id/me_iv4"
                        android:text="设置"
                        android:textColor="#ff333333"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="7dp"
                        android:layout_height="11dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="24dp"
                        android:src="@mipmap/grey_rhit" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#EDEDED" />

                <RelativeLayout
                    android:id="@+id/me_merchants_about"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:id="@+id/me_iv5"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="24dp"
                        android:src="@mipmap/main_me_about" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:layout_toRightOf="@+id/me_iv5"
                        android:text="关于我们"
                        android:textColor="#ff333333"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="7dp"
                        android:layout_height="11dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="24dp"
                        android:src="@mipmap/grey_rhit" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="50dp"
                    android:background="#EDEDED" />

            </LinearLayout>

        </ScrollView>
<!--    </android.support.v4.widget.SwipeRefreshLayout>-->

</LinearLayout>