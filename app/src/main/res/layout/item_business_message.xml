<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main_me_line_bg"
    android:layout_marginBottom="12dp">

    <ImageView
        android:src="@mipmap/business_message_iv1"
        android:id="@+id/item_business_message_iv"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

    <TextView
        android:id="@+id/item_business_message_tv_title"
        android:layout_marginLeft="9dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_business_message_iv"
        app:layout_constraintTop_toTopOf="@+id/item_business_message_iv"
        app:layout_constraintLeft_toRightOf="@+id/item_business_message_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提现到账"
        android:textColor="#ffa7a7a7"
        android:textSize="15sp"
        />

    <TextView
        android:lines="2"
        android:ellipsize="end"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="13dp"
        android:id="@+id/item_business_message_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="您的提现已成功到账，提现金额150元。提现到招商银行，提现单号tx202012051 21343085833116"
        android:textColor="#ff626262"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@+id/item_business_message_iv" />

    <View
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/item_business_message_view"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/item_business_message_tv_content"
        android:background="#ffe5e5e5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/item_business_message_time"
        android:layout_marginBottom="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/item_business_message_view"
        app:layout_constraintLeft_toLeftOf="@+id/item_business_message_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020-12-02"
        android:textColor="#ff9b9b9b"
        android:textSize="13sp"
        />

    <TextView
        android:id="@+id/my_tv"
        app:layout_constraintRight_toRightOf="@+id/item_business_message_view"
        app:layout_constraintBottom_toBottomOf="@+id/item_business_message_time"
        app:layout_constraintTop_toTopOf="@+id/item_business_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看详情 >"
        android:textColor="#3CA0FF"
        android:textSize="13sp"
        />
</android.support.constraint.ConstraintLayout>