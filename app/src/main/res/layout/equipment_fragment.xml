<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="5dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:background="@color/new_theme_color" />

        <TextView
            android:id="@+id/merchants_big_detail_tv14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:text="电签"
            android:textColor="#919191"
            android:textSize="14sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="11dp"
        android:background="@drawable/main_me_line_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/equipment_number"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff8e8e8e"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/equipment_time"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff8e8e8e"
            android:textSize="14sp"
            />

    </LinearLayout>

</LinearLayout>