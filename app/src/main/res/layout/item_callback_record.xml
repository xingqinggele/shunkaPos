<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#F3F3F3">

    <TextView
        android:id="@+id/item_callback_list_time"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020-12"
        android:textColor="#ff969696"
        android:textSize="13sp"
        />

    <android.support.v7.widget.RecyclerView
        android:divider="@null"
        tools:listitem="@layout/item_callback_record_item_list_view"
        android:layout_marginTop="10dp"
        android:id="@+id/item_callback_list_view"
        android:background="@drawable/main_me_line_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>