<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_select_fragment">


    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="提示"
        android:textColor="#3A3A3A"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="您确定将此商户转移给"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="@+id/dialog_title"
        app:layout_constraintTop_toBottomOf="@+id/dialog_title" />

    <TextView
        android:id="@+id/dialog_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="张三"
        android:textColor="#FFA82C"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_tv1"
        app:layout_constraintLeft_toRightOf="@+id/dialog_tv1"
        app:layout_constraintTop_toTopOf="@+id/dialog_tv1" />


    <TextView
        android:id="@+id/dialog_determine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:text="确定"
        android:textColor="#FF9920"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_tv1"
        app:layout_goneMarginBottom="30dp" />

    <TextView
        android:id="@+id/dialog_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:text="取消"
        android:textColor="#FF9920"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_determine"
        app:layout_constraintRight_toLeftOf="@+id/dialog_determine"
        app:layout_constraintTop_toTopOf="@+id/dialog_determine" />


</android.support.constraint.ConstraintLayout>