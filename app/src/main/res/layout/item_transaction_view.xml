<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_me_line_bg">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/trans_top"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/trans_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/trans_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="2021-10-29 16:53:13"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="@+id/trans_name"
            app:layout_constraintTop_toBottomOf="@+id/trans_name" />


        <TextView
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="15dp"
            android:id="@+id/trans_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3699"
            android:textColor="#29D385"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/trans_time"
            app:layout_constraintTop_toTopOf="@+id/trans_name" />

        <View
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_dotted_line"
            android:layerType="software"
            android:id="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/trans_time"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"/>

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>