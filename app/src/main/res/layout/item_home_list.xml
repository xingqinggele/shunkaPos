<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="12dp"
        android:id="@+id/home_list_item_relative"
        android:layout_width="31dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/home_list_item_ranking_iv"
            android:layout_width="25dp"
            android:layout_height="31dp"
            android:src="@mipmap/home_list_card01" />


        <TextView
            android:id="@+id/home_list_item_ranking_tv"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:background="@mipmap/home_list_item_iv01"
            android:text="4"
            android:layout_width="18dp"
            android:layout_height="18dp"/>
    </RelativeLayout>
    
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_home_list_head"
        android:layout_marginLeft="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/home_list_item_relative"
        android:layout_width="35dp"
        android:layout_height="35dp"
        fresco:roundAsCircle="true"
        />
    

    <TextView
        android:id="@+id/home_list_item_name"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toRightOf="@+id/item_home_list_head"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="æŽ**"
        android:textColor="#ff666666"
        android:textSize="13sp"
        />

    <TextView
        android:id="@+id/home_list_item_num"
        android:layout_marginRight="48dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textColor="#ffff9920"
        android:textSize="30sp"
        />


    <View
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F1F1F1" />

</android.support.constraint.ConstraintLayout>