<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Custom_Dialog_Theme_Background_DimEnabled_True" parent="android:style/Theme.Dialog">
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 背景不模糊的弹窗效果 -->
    <style name="Custom_Dialog_Theme_Background_DimEnabled_False" parent="android:style/Theme.Dialog">
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--    main style-->
    <style name="main_radioButton_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textColor">@drawable/main_rbtn_txt</item>
        <item name="android:textSize">11sp</item>
    </style>

    <!-- Dialog从底部弹出的动画效果-->
    <style name="MyDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="myNavigationDrawerStyle">
        <item name="android:textSize">11sp</item>
    </style>


    <style name="TabLayoutTextSize2">
        <item name="android:textSize">16sp</item>
    </style>

<!--    <style name="LoginCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">-->
<!--        <item name="android:button">@drawable/checkbox_selector</item>-->
<!--        <item name="android:paddingLeft">25.0dip</item>-->
<!--        <item name="android:maxHeight">10.0dip</item>-->
<!--    </style>-->

    <style name="My_CheckBox" parent="@android:style/Widget.Material.CompoundButton.CheckBox">
        <item name="android:colorControlActivated">@color/theme_color</item>
        <item name="android:colorControlNormal">@color/theme_color</item>
    </style>

    <!--版本更新Dialog-->
    <style name="BaseDialog" parent="android:Theme.Light">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="tab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#ff181c20</item>
        <item name="android:textSize">14sp</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <declare-styleable name="AmountView">
        <!-- 左右2边+-按钮的宽度 -->
        <attr name="btnWidth" format="dimension" />
        <!-- 中间TextView的宽度 -->
        <attr name="tvWidth" format="dimension" />
        <!--<attr name="tvColor" format="color"/>-->
        <attr name="tvTextSize" format="dimension"/>
        <attr name="btnTextSize" format="dimension"/>
    </declare-styleable>


    <!--    homeintegralorder_activity style-->
    <style name="homeintegralorder_activity_radioButton_style">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/home_integral_order_rbtn_txt</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!--    homeintegralorder_activity style-->
    <style name="home_team_details_activity_raadioButton_style">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/home_team_details_rbtn_txt</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="loginCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
        <item name="android:paddingLeft">5.5dip</item>
        <item name="android:maxHeight">10.0dip</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/myCheck</item>
        <item name="colorControlActivated">@color/login_title</item>
    </style>

    <style name="dialog_radioButton_style">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/out_login_rbtn_txt</item>
        <item name="android:textSize">15sp</item>

    </style>

    <!--高仿IOS7开关 - 样式-->
    <declare-styleable name="SwitchButton">
        <attr name="buttonColor" format="color" />
    </declare-styleable>


    <style name="popupwindow_anim_style">
        <!-- 指定显示的动画xml -->
        <item name="android:windowEnterAnimation">@anim/show_from_bottom</item>
        <!-- 指定消失的动画xml -->
        <item name="android:windowExitAnimation">@anim/hide_to_bottom</item>
    </style>

</resources>